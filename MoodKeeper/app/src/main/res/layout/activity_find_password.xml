<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back_to_login"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/ic_black_back"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:textAlignment="center"
                android:text="找回密码"
                android:textSize="30sp"
                android:textColor="@color/blue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:tint="?attr/colorAccent"
                        android:background="@mipmap/ic_user"/>

                    <EditText
                        android:id="@+id/find_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="10dp"
                        android:hint="请输入手机号码"
                        android:ems="10"
                        android:maxLength="11"
                        android:inputType="phone" />

                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:tint="?attr/colorAccent"
                        android:background="@mipmap/ic_password"/>

                    <EditText
                        android:id="@+id/find_password1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="10dp"
                        android:selectAllOnFocus="true"
                        android:hint="请输入新密码（至少6位）"
                        android:inputType="textPassword" />


                </FrameLayout>

                <EditText
                    android:id="@+id/find_password2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="10dp"
                    android:selectAllOnFocus="true"
                    android:hint="请再次输入密码"
                    android:inputType="textPassword" />

            </LinearLayout>

            <TextView
                android:id="@+id/find_password_tv"
                android:layout_width="284dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_login_button"
                android:text="立即修改"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

